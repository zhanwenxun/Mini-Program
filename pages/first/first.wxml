<!--pages/first/first.wxml-->
<view class="container">

  <button class="return" bindtap='ToWork'>返回</button>

    <view class="first" >  
    <block wx:for="{{listData}}" wx:key="{[name]}" wx:if="{{index==0}}">
      <view class="name">
        <text class="workname">
          <text class="gray">●</text>  {{item.name}}<text class="gray">●</text>
        </text>
      </view>
      <view class="imagearea">
        <image class="image" style="display:flex; " bindtap="previewImage" mode="widthFix" src='{{url1}}' data-src='{{url1}}'></image>
